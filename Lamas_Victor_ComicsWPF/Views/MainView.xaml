<Window x:Class="Lamas_Victor_ComicsWPF.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lamas_Victor_ComicsWPF.Views"
        xmlns:vm="clr-namespace:Lamas_Victor_ComicsWPF.ViewModels"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainView" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:InicioViewModel}">
            <local:InicioView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ComicsViewModel}">
            <local:ComicsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ComicsOperacionesViewModel}">
            <local:ComicsOperacionesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:OperacionesViewModel}">
            <local:OperacionesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:StockViewModel}">
            <local:StockView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ClientesViewModel}">
            <local:ClientesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EstadisticasViewModel}">
            <local:EstadisticasView/>
        </DataTemplate>
    </Window.Resources>

    <Border CornerRadius="10"
            BorderThickness="1">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}"
                              Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" 
                              Offset="1.75"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!--Navigation Menu-->
                <ColumnDefinition Width="250"/>
                <!--Content Section-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Navigation Menu-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource secondaryBackColor1}"
                                      Offset="0" />
                        <GradientStop Color="{StaticResource secondaryBackColor2}"
                                      Offset="1.75" />
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>

                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40">
                        <Image Source="/Resources/logo.png"
                               Height="30"/>
                        <TextBlock Text="COMICS STORE"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="20"
                                   FontFamily="Courier New"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>

                    </StackPanel>

                    <!--Menu Buttons-->
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color1}"
                                 Command="{Binding ShowInicioViewCommand}"
                                 IsChecked="True">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Home"
                                             Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Inicio"
                                       Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color2}"
                                 Command="{Binding ShowComicsViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="File"
                                             Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Cómics"
                                       Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color3}"
                                 Command="{Binding ShowOperacionesViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="ShoppingBasket"
                                             Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Operaciones"
                                       Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color4}"
                                 Command="{Binding ShowStockViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="FirstOrder"
                                             Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Stock"
                                       Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color5}"
                                 Command="{Binding ShowClientesViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Users"
                                             Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Clientes"
                                       Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color6}"
                                 Command="{Binding ShowEstadisticasViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="LineChart"
                                             Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Estadísticas"
                                       Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>

            <!-- Main Section-->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">

                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}"
                          Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" 
                          Offset="1.75"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control bar-->
                        <RowDefinition Height="50"/>
                        <!--Header / caption-->
                        <RowDefinition Height="50"/>
                        <!--Content section / child views-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Control bar-->
                    <StackPanel x:Name="panelControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,0,5"
                                MouseLeftButtonDown="panelControlBar_MouseLeftButtonDown"
                                MouseEnter="panelControlBar_MouseEnter">

                        <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color5}"
                                Click="btnClose_Click">

                            <fa:ImageAwesome Icon="Close"
                                            Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                        <Button x:Name="btnMaximize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color5}"
                                Click="btnMaximize_Click">

                            <fa:ImageAwesome Icon="WindowMaximize"
                                            Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                        <Button x:Name="btnMinimize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color5}"
                                Click="btnMinimize_Click">

                            <fa:ImageAwesome Icon="WindowMinimize"
                                            Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <!--Header / Caption-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!--Caption-->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <fa:ImageAwesome Icon="Home"
                                            Height="20"
                                            Width="20"
                                            Foreground="{StaticResource titleColor2}"
                                            Margin="35,0,10,0"/>

                            <TextBlock Text="{Binding Local.Nombre}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="16"
                                    FontFamily="Courier New"
                                    FontWeight="Medium"
                                    VerticalAlignment="Center"/>
                        </StackPanel>

                        <!--User options-->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">

                            <Button Style="{StaticResource iconButton}"
                                    Tag="{StaticResource color1}">

                                <fa:ImageAwesome Icon="AngleDown"
                                                Height="12"
                                                Width="12"
                                                Style="{StaticResource iconButtonIcon}"/>
                            </Button>

                            <Ellipse Height="35"
                                     Width="35"
                                     Stroke="{StaticResource color2}"
                                     StrokeThickness="2"
                                     Margin="10,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding Imagen}"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <StackPanel Orientation="Vertical"
                                        FlowDirection="RightToLeft"
                                        VerticalAlignment="Center"
                                        Margin="0,0,10,0">
                                <TextBlock Text="{Binding NombreCompleto}"
                                        Foreground="{StaticResource titleColor3}"
                                        FontFamily="Courier New"
                                        FontSize="14"
                                        VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Empleado.Nif}"
                                        Foreground="{StaticResource titleColor3}"
                                        FontFamily="Courier New"
                                        FontSize="14"
                                        VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Style="{StaticResource iconButton}"
                                    Tag="{StaticResource color1}">
                                <fa:ImageAwesome Icon="ClockOutline"
                                                 Style="{StaticResource iconButtonIcon}"/>
                            </Button>

                            <Button Style="{StaticResource iconButton}"
                                    Tag="{StaticResource color1}">
                                <fa:ImageAwesome Icon="Envelope"
                                                 Style="{StaticResource iconButtonIcon}"/>
                            </Button>

                            <Button Style="{StaticResource iconButton}"
                                        Tag="{StaticResource color1}">
                                <fa:ImageAwesome Icon="Bell"
                                                 Style="{StaticResource iconButtonIcon}"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--Content section / child views-->
                    <Border Grid.Row="2">
                        <Border.Background>
                            <ImageBrush ImageSource="/Resources/background.png"
                                        Stretch="UniformToFill"
                                        Opacity="0.1"/>
                        </Border.Background>

                        <ContentControl Content="{Binding CurrentChildView}"
                                        Margin="20"
                                        Foreground="{StaticResource titleColor2}"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
