<UserControl x:Class="Lamas_Victor_ComicsWPF.Views.InicioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lamas_Victor_ComicsWPF.Views"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <Grid FlowDirection="RightToLeft"
                  Margin="50,0,50,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        CornerRadius="5"
                        BorderThickness="5"
                        BorderBrush="DarkViolet"
                        Margin="5">
                    <TextBlock Background="DarkViolet"
                               Foreground="{StaticResource titleColor1}"
                               FontSize="16"
                               FontFamily="Arial"
                               Padding="5">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="(Total pedidos (empleado"
                                       Padding="0,0,0,10"/>
                            <TextBlock Text="{Binding TotalPedidosEmpleadoUltimoMes}"/>
                        </StackPanel>
                    </TextBlock>
                </Border>

                <Border Grid.Column="1"
                        CornerRadius="5"
                        BorderThickness="5"
                        BorderBrush="Red"
                        Margin="5">
                    <TextBlock Background="Red"
                               Foreground="{StaticResource titleColor1}"
                               FontSize="16"
                               FontFamily="Arial"
                               Padding="5">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="(Stock &lt; 10 (local"
                                       Padding="0,0,0,10"/>
                            <TextBlock Text="{Binding TotalProductosMenoresDecena}"/>
                        </StackPanel>
                    </TextBlock>        
                </Border>

                <Border Grid.Column="2"
                        CornerRadius="5"
                        BorderThickness="5"
                        BorderBrush="Blue"
                        Margin="5">
                    <TextBlock Background="Blue"
                               Foreground="{StaticResource titleColor1}"
                               FontSize="16"
                               FontFamily="Arial"
                               Padding="5">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="(Pedidos hoy (local"
                                       Padding="0,0,0,10"/>
                            <TextBlock Text="{Binding TotalImportePedidosHoyLocal}"/>
                        </StackPanel>
                    </TextBlock>
                </Border>

                <Border Grid.Column="3"
                        CornerRadius="5"
                        BorderThickness="5"
                        BorderBrush="Green"
                        Margin="5">
                    <TextBlock Background="Green"
                               Foreground="{StaticResource titleColor1}"
                               FontSize="16"
                               FontFamily="Arial"
                               Padding="5">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="(Pedidos hoy (empleado"
                                       Padding="0,0,0,10"/>
                            <TextBlock Text="{Binding TotalImportePedidosHoyEmpleado}"/>
                        </StackPanel>
                    </TextBlock>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <lvc:CartesianChart Grid.Column="0"
                                    Series="{Binding Series1}"
                                    XAxes="{Binding XAxes1}"
                                    YAxes="{Binding YAxes1}"
                                    Title="{Binding TituloGraficaLineal}"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch">
                </lvc:CartesianChart>

                <lvc:PieChart Grid.Column="1"
                              Series="{Binding Series2}">
                </lvc:PieChart>
            </Grid>
        </Grid>
    </Border>
</UserControl>
